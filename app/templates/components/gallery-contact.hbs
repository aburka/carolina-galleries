<div class="gallery-contact">
  <div class="gallery-address">
    <h3>Carolina Galleries</h3>
    <p>123 King Street</p>
    <p>Charleston, SC 29401</p>
    <p>(803) 555-5555</p>
  <div class="gallery-hours">
    {{#if isOpen}}
      <h3>Our doors are open. Stop by now!</h3>
      {{else}}
      <h3>Sorry, we're closed right now.</h3>
    {{/if}}
    <h4>Hours:</h4>
    <p>Wednesday-Saturday, 8 A.M. - 7:00 P.M.</p>
  </div>
  <div class="gallery-contact-form-container">
    {{#if isHidden}}
      <h3 class="contact-us" {{action 'openContact'}}>Contact Us</h3>
    {{else}}
      <div class="gallery-contact-form">
        {{input type=text value=name placeholder="Your Name"}}
        {{input type=text value=email placeholder="Your Email"}}
        {{input type=textarea value=comments placeholder="Questions or comments"}}
        <p class="submit-contact" {{action 'submitContact'}}>Submit</p>
        <p class="submit-contact" {{action 'cancel'}}>Cancel</p>
      </div>
    {{/if}}
  </div>
  </div>
