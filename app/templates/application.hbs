<section class="main-heading">
  <div class="main-logo">
    {{#link-to 'index'}}<img src="/images/cg-thumbnail.png" alt="Carolina Galleries" />{{/link-to}}
  </div>
  <nav class="main-nav">
    <ul class="main-nav-list">
      {{!-- {{#link-to 'artists.index'}}<li class="main-nav-item">Artists</li>{{/link-to}} --}}
      {{#link-to 'artwork.index'}}<li class="main-nav-item">Artwork</li>{{/link-to}}
      {{#if session.isAuthenticated}}
      {{#link-to 'users.gallery'}}<li class="main-nav-item">Community Gallery</li>{{/link-to}}
      {{/if}}
      {{#link-to 'contact'}}<li class="main-nav-item">Contact</li>{{/link-to}}
    </ul>
  </nav>
  {{#if session.isAuthenticated}}
    {{#link-to 'users.current'}}<h2>{{session.currentUser.firstName}} {{session.currentUser.lastName}}</h2>{{/link-to}}
    <button {{action 'invalidateSession'}}>Logout</button>
  {{else}}
    {{users-create model=model createUser='createUser'}}
    {{sessions-create}}
  {{/if}}

</section>


{{outlet}}
